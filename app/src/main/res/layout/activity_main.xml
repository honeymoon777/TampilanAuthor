<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">


   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="match_parent" >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/backButtonEditProfile"
                   android:layout_width="45dp"
                   android:layout_height="48dp"
                   android:layout_marginTop="20dp"
                   android:backgroundTint="#000000"
                   android:text="@string/BackButton"
                   android:textColor="@color/teal_200"
                   android:textSize="30dp" />

               <ImageView
                   android:id="@+id/logoProjectEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="95dp"
                   android:paddingRight="@android:dimen/app_icon_size"
                   app:srcCompat="@drawable/openstoryfix" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#303030"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/fotoAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:srcCompat="@tools:sample/avatars" />

                   <TextView
                       android:id="@+id/txtNamaAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="Nama"
                       android:textColor="@color/white"
                       android:textSize="20dp"
                       android:textStyle="bold" />

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/EditProfileAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableStart="@drawable/ic_baseline_profileacc"
                       android:text="Edit Profile"
                       android:textColor="@color/white"
                       android:textSize="12sp" />

                   <TextView
                       android:id="@+id/UploadArtworkAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableStart="@drawable/ic_baseline_upload"
                       android:text="Upload Artwork"
                       android:textColor="@color/white"
                       android:textSize="12sp" />

                   <TextView
                       android:id="@+id/AcountSettingAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableStart="@drawable/ic_baseline_settings_24"
                       android:text="Account Setting"
                       android:textColor="@color/white"
                       android:textSize="12sp" />

                   <TextView
                       android:id="@+id/LogoutAuthorEditProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableStart="@drawable/ic_baseline_logout"
                       android:text="Logout"
                       android:textColor="@color/white"
                       android:textSize="12sp" />
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/LayoutEditProfile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:layout_marginTop="30dp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/TextEditProfileAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Edit Profile"
                   android:textColor="@color/white"
                   android:textSize="20sp" />

               <TextView
                   android:id="@+id/UsernameAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Username"
                   android:textColor="@color/white"
                   android:textSize="12sp" />

               <EditText
                   android:id="@+id/EditTextUsernameAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:background="@drawable/custom_input"
                   android:ems="10"
                   android:hint="Username"
                   android:inputType="textPersonName"
                   android:padding="5dp"
                   android:textColor="@color/black"
                   android:textColorHint="#9A9A9A"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/EmailAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Email Address"
                   android:textColor="@color/white"
                   android:textSize="12sp" />

               <EditText
                   android:id="@+id/editTextEmailAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:background="@drawable/custom_input"
                   android:ems="10"
                   android:hint="Email"
                   android:inputType="textPersonName"
                   android:padding="5dp"
                   android:textColor="@color/black"
                   android:textColorHint="#9A9A9A"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/BioAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Bio"
                   android:textColor="@color/white"
                   android:textSize="12sp" />

               <EditText
                   android:id="@+id/editBioAuthorEditProfile2"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:background="@drawable/custom_input"
                   android:ems="10"
                   android:hint="Bio"
                   android:inputType="textPersonName"
                   android:padding="5dp"
                   android:textColor="@color/black"
                   android:textColorHint="#9A9A9A"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/InstagramUsernameAuthorEditProfile10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Instagram Username"
                   android:textColor="@color/white"
                   android:textSize="12sp" />

               <EditText
                   android:id="@+id/editInstagramAuthorEditProfile3"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:background="@drawable/custom_input"
                   android:ems="10"
                   android:hint="Instagram "
                   android:inputType="textPersonName"
                   android:padding="5dp"
                   android:textColor="@color/black"
                   android:textColorHint="#9A9A9A"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/usernameYoutubeEditProfile11"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Youtub Username"
                   android:textColor="@color/white"
                   android:textSize="12sp" />

               <EditText
                   android:id="@+id/editYoutubeAuthorEditProfile4"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:background="@drawable/custom_input"
                   android:ems="10"
                   android:hint="Youtube"
                   android:inputType="textPersonName"
                   android:padding="5dp"
                   android:textColor="@color/black"
                   android:textColorHint="#9A9A9A"
                   android:textSize="14sp" />

               <Button
                   android:id="@+id/btnUploadAvatar"
                   android:layout_width="136dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="@color/teal_200"
                   android:text="Upload Avatar" />

               <ImageView
                   android:id="@+id/gambarAvatarEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   tools:srcCompat="@tools:sample/avatars" />

               <Button
                   android:id="@+id/btnUploadCover"
                   android:layout_width="136dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="@color/teal_200"
                   android:layout_gravity="center"
                   android:text="Upload Cover" />

               <ImageView
                   android:id="@+id/gambarCoverEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   tools:srcCompat="@tools:sample/avatars" />

               <Button
                   android:id="@+id/SaveAuthorEditProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="SAVE" />
           </LinearLayout>

       </LinearLayout>
   </ScrollView>


</LinearLayout>